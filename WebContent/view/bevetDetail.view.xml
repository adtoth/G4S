<core:View controllerName="sap.ui.demo.myFiori.view.bevetDetail"
	xmlns="sap.m" xmlns:form="sap.ui.layout.form" xmlns:core="sap.ui.core">
	<Page title="Bevételezés részletek" class="sapUiFioriObjectPage"
		showNavButton="true" navButtonPress="handleNavButtonPress">
		<ObjectHeader title="{id}">
		<firstStatus>
					<ObjectStatus
						text="{
							path: 'status',
							formatter: 'sap.ui.demo.myFiori.util.Formatter.statusText'
						}"
						state="{
							path: 'status',
							formatter: 'sap.ui.demo.myFiori.util.Formatter.statusState'
						}"
						icon="{path: 'Icon'}" />

				</firstStatus>
			<attributes>
				<ObjectAttribute text="Azonosító: {id}" />
				<ObjectAttribute text="Érvényesség: {validity}" />
			</attributes>

		</ObjectHeader>

		<Table headerText="Tételek" items="{/deliveryItem}">
			<columns>
				<Column>
					<header>
						<Label text="Tétel ID" demandPopin="true" />
					</header>
				</Column>

				<Column hAlign="Right">
					<header>
						<Label text="Státusz" />
					</header>
				</Column>
			</columns>
			<ColumnListItem>
				<cells>
					<ObjectIdentifier title="{ProductID}" />
					<ObjectNumber
						number="{path: 'Pick up status', formatter:'sap.ui.demo.myFiori.util.Formatter.statusText' }"
						state="{path: 'Pick up status', formatter:'sap.ui.demo.myFiori.util.Formatter.statusState' }" />
				</cells>
			</ColumnListItem>
		</Table>


		<footer>
			<Bar>
				<contentRight>

					<Button type="Emphasized" text="Scan" press="scan" />
				</contentRight>

				<contentLeft>

					<Button type="Emphasized" text="Lezár" press="send" />
				</contentLeft>
			</Bar>
		</footer>
	</Page>
</core:View>
